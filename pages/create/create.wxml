<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">Title</view>
    <input name="title" placeholder="Your story title here...." />
  </view>

  <view class="section">
    <view class="section__title">Description</view>
    <textarea maxlength="-1" name="description" placeholder="Your story description here..." />
  </view>
  
  <view class="btn-area">
    <button size='mini' type='primary' form-type="submit">Submit</button>
    <button size='mini' form-type="reset">Reset</button>
  </view>
</form>